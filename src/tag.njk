---
layout: base
pagination:
  data: collections
  size: 1
  alias: tag
permalink: /tags/{{ tag | slug }}/
eleventyComputed:
  title: "Posts tagged `{{ tag }}`"
---
<h1 class="font-bold text-4xl mb-8">{{title}}</h1>

<ul class="list-none px-0">
{% set taglist = collections[ tag ] %}
{% for post in taglist | reverse %}
  <li class="mb-8">
    <a class="text-2xl font-bold hover:text-orange-500" href="{{ post.url }}">{{ post.data.title }}</a>
    <p><small>{{post.date | date}}</small></p>
  </li>
{% endfor %}
</ul>