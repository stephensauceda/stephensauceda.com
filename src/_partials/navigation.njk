<nav
  class="fixed bottom-0 left-0 w-full p-4 border-t flex justify-between bg-white"
>
  <a href="/" class="p-name font-bold">{{ site.name }}</a>
  <ul class="flex justify-center">
    {%- for item in site.navigation -%}
    <li class="mr-4">
      <a class="text-gray-500" href="{{ item.url }}"
        ><small>{{ item.label }}</small></a
      >
    </li>
    {%- endfor -%}
  </ul>
</nav>
